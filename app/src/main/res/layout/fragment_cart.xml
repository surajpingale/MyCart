<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragments.CartFragment">

    <com.example.mycart.utils.customviews.MyCartTextView
        android:id="@+id/tv_no_cart_item_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/no_cart_item_found"
        android:gravity="center"
        android:textColor="@color/colorThemeOrange"
        android:textSize="@dimen/_24sp"
        android:visibility="gone"
        />

    <include
        android:id="@+id/include"
        layout="@layout/layout_cart"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>